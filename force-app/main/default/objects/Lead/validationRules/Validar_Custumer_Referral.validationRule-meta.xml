<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validar_Custumer_Referral</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISBLANK(Finder__c),
OR(
ISPICKVAL(LeadSource, &apos;Customer Referral&apos;)
)
)</errorConditionFormula>
    <errorMessage>If the lead source is Finder or Custumer Referral, you need to enter the Finder.</errorMessage>
</ValidationRule>
